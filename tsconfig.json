{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES2020",
    "module": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "scenes/*": ["scenes/*"],
      "managers/*": ["managers/*"],
      "objects/*": ["objects/*"],
      "game/*": ["game/*"],
      "assets/*": ["assets/*"],
      "maps/*": ["maps/*"],
      "global/*": ["global/*"],
      "utils/*": ["utils/*"],
      "colors/*": ["colors/*"]
    }
  },
  "include": [ "src/**/*.ts", "global.d.ts"],
  "exclude": [ "node_modules" ]
}